<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartscreenActivity"
    android:orientation="vertical"
    android:background="#88b4f1"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/textviewStartScreenWelcome"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="WELCOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/icon_start_screen"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/textviewStartScreenDescription"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="Browser all the interesting place using The City App "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>